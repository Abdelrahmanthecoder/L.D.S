{
    "name": "L.D.S",
    "version": "1.0.976",
    "manifest_version": 2,
    "description": "Introducing L.D.S a Chrome extension that allows you to switch between dark and light mode easily while browsing on the web!",
    "background": {
        "scripts": [
            "popup.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "L.D.S",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}
